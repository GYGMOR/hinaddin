<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>66f982c5-0a74-4f6f-9999-123456789abc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Sonnenberg</ProviderName>
  <DefaultLocale>de-CH</DefaultLocale>
  <DisplayName DefaultValue="HIN Verschlüsselung"/>
  <Description DefaultValue="Fragt beim Senden, ob HIN-Verschlüsselung angewendet werden soll."/>

  <IconUrl DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/icon32.png"/>
  <HighResolutionIconUrl DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/icon80.png"/>
  <SupportUrl DefaultValue="https://www.sonnenberg-baar.ch/"/>

  <AppDomains>
    <AppDomain>cdn.jsdelivr.net</AppDomain>
    <AppDomain>appsforoffice.microsoft.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Mindest-Anforderungssatz für OnMessageSend -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <Sets DefaultMinVersion="1.8">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">

        <!-- Gemeinsame Runtime: HTML lädt office.js + dein JS -->
        <Runtimes>
          <Runtime resid="WebViewRuntime.Url">
            <Override type="javascript" resid="JSRuntime.Url"/>
          </Runtime>
        </Runtimes>

        <DesktopFormFactor>

          <!-- OnMessageSend-Event -->
          <ExtensionPoint xsi:type="LaunchEvent">
            <LaunchEvents>
              <LaunchEvent Type="OnMessageSend"
                           FunctionName="onMessageSendHandler"
                           SendMode="PromptUser"/>
            </LaunchEvents>
            <SourceLocation resid="WebViewRuntime.Url"/>
          </ExtensionPoint>

          <!-- Optionaler Button im Compose-Fenster -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeCmdGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="encryptButton">
                  <Label resid="encryptButtonLabel"/>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>encryptSendFunction</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/icon16.png"/>
        <bt:Image id="icon32" DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/icon32.png"/>
        <bt:Image id="icon80" DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/icon80.png"/>
      </bt:Images>
      <bt:Urls>
        <!-- HTML (WebView) -->
        <bt:Url id="WebViewRuntime.Url" DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/encrypt-dialog.html"/>
        <!-- Dein JavaScript -->
        <bt:Url id="JSRuntime.Url" DefaultValue="https://cdn.jsdelivr.net/gh/GYGMOR/hinaddin@main/on-send-event.js"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Verschlüsselung"/>
        <bt:String id="encryptButtonLabel" DefaultValue="HIN verschlüsseln"/>
      </bt:ShortStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
